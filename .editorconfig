root = true

# Global analyzer defaults
[*.cs]
dotnet_analyzer_diagnostic.severity = warning

# Promote selected important rules
# Null argument checks
dotnet_diagnostic.CA1062.severity = error
# Method can be static
dotnet_diagnostic.CA1822.severity = error
# Use const
dotnet_diagnostic.CA1802.severity = warning
# Unused private members
dotnet_diagnostic.IDE0051.severity = warning
# Unused parameters
dotnet_diagnostic.IDE0060.severity = warning
# Prefer file-scoped namespaces (optional; keep as suggestion)
dotnet_diagnostic.IDE0161.severity = suggestion

# StyleCop: disable headers & documentation until adopted
# (Only active when StyleCop.Analyzers package present)
dotnet_diagnostic.SA1633.severity = none
dotnet_diagnostic.SA1600.severity = none
dotnet_diagnostic.SA1200.severity = none
dotnet_diagnostic.SA1101.severity = none
dotnet_diagnostic.SA1309.severity = none
dotnet_diagnostic.SA1413.severity = warning

# Temporarily disable formatting rules that were introduced in merge
dotnet_diagnostic.SA1516.severity = none
dotnet_diagnostic.SA1503.severity = none
dotnet_diagnostic.SA1316.severity = none
dotnet_diagnostic.SA1312.severity = none
dotnet_diagnostic.SA1201.severity = none
dotnet_diagnostic.SA1202.severity = none
dotnet_diagnostic.SA1505.severity = none
dotnet_diagnostic.SA1508.severity = none
dotnet_diagnostic.SA1502.severity = none
dotnet_diagnostic.SA1128.severity = none
dotnet_diagnostic.SA1119.severity = none
dotnet_diagnostic.SA1407.severity = none
dotnet_diagnostic.SA1122.severity = none
dotnet_diagnostic.CA1716.severity = none
dotnet_diagnostic.CA1805.severity = none
dotnet_diagnostic.CA1720.severity = none
dotnet_diagnostic.SA1513.severity = none
dotnet_diagnostic.SA1515.severity = none

# Allow test method underscores / naming
dotnet_diagnostic.CA1707.severity = none

# Formatting preferences
csharp_prefer_braces = true:suggestion
csharp_style_var_for_locals = true:suggestion

# End of file newline
insert_final_newline = true
